<div class="form-card">
  <h2 class="form-title">Kayıt Ol</h2>
  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, 'İsim', class: 'form-label' %>
      <%= f.text_field :name, autofocus: true, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'E-posta', class: 'form-label' %>
      <%= f.email_field :email, autocomplete: "email", class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= f.label :role, 'Rol', class: 'form-label' %>
      <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Şifre', class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'Şifre (Tekrar)', class: 'form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input' %>
    </div>
    <div>
      <%= f.submit 'Kayıt Ol', class: 'btn-primary', style: 'width:100%;' %>
    </div>
  <% end %>
  <div style="margin-top: 18px; text-align: center;">
    <%= link_to 'Giriş Yap', new_session_path(resource_name), class: 'card-link' %>
  </div>
</div>
