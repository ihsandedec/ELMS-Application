<div class="form-card">
  <h1 class="form-title">Kursu Düzenle</h1>
  <%= form_with(model: @course, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, 'Kurs Adı', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= form.label :description, 'Açıklama', class: 'form-label' %>
      <%= form.text_area :description, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= form.label :duration_minutes, 'Süre (dk)', class: 'form-label' %>
      <%= form.number_field :duration_minutes, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= form.label :active, 'Aktif mi?', class: 'form-label' %>
      <%= form.check_box :active %>
    </div>
    <div class="btn-group">
      <%= form.submit 'Güncelle', class: 'btn-primary' %>
    </div>
    <% if user_signed_in? && (current_user.admin? || @course.instructor == current_user) %>
      <div style="text-align: left; margin-top: 12px;">
        <%= link_to 'Kursu Sil', course_path(@course), method: :delete, data: { confirm: 'Kursu silmek istediğinize emin misiniz?' }, class: 'card-link', style: 'color: #dc2626;' %>
      </div>
    <% end %>
  <% end %>
</div>