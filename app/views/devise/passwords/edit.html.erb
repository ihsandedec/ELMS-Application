<div class="max-w-md mx-auto bg-white rounded shadow p-6 mt-10">
  <h2 class="text-2xl font-bold mb-6 text-center">Yeni Şifre Belirle</h2>
  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :password, 'Yeni Şifre', class: 'block font-semibold mb-1' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'w-full border rounded px-3 py-2' %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, 'Yeni Şifre (Tekrar)', class: 'block font-semibold mb-1' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full border rounded px-3 py-2' %>
    </div>
    <div class="mb-4">
      <%= f.hidden_field :reset_password_token %>
    </div>
    <div>
      <%= f.submit 'Şifreyi Güncelle', class: 'bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full' %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
