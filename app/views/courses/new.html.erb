<div class="form-card">
  <h1 class="form-title">Yeni Kurs Oluştur</h1>
  <%= form_with(model: @course, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, 'Kurs Adı', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= form.label :description, 'Açıklama', class: 'form-label' %>
      <%= form.text_area :description, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= form.label :duration_minutes, 'Süre (dk)', class: 'form-label' %>
      <%= form.number_field :duration_minutes, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= form.label :active, 'Aktif mi?', class: 'form-label' %>
      <%= form.check_box :active %>
    </div>
    <div>
      <%= form.submit 'Oluştur', class: 'btn-primary' %>
    </div>
  <% end %>
</div>
