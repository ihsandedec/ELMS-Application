<div class="max-w-md mx-auto bg-white rounded shadow p-6 mt-10">
  <h2 class="text-2xl font-bold mb-6 text-center">Şifre Sıfırlama</h2>
  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :email, 'E-posta', class: 'block font-semibold mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border rounded px-3 py-2' %>
    </div>
    <div>
      <%= f.submit 'Şifre Sıfırlama Linki Gönder', class: 'bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full' %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to 'Giriş Yap', new_session_path(resource_name), class: 'text-blue-600 hover:underline' %>
  </div>
</div>
