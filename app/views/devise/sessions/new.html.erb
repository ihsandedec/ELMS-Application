<div class="form-card">
  <h2 class="form-title">Giriş Yap</h2>
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
    <div class="form-group">
      <%= f.label :email, 'E-posta', class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Şifre', class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="form-group" style="display: flex; align-items: center;">
        <%= f.check_box :remember_me, class: '' %>
        <%= f.label :remember_me, 'Beni hatırla', class: 'form-label', style: 'margin-bottom:0; margin-left:8px; font-weight:400;' %>
      </div>
    <% end -%>
    <div>
      <%= f.submit 'Giriş Yap', class: 'btn-primary', style: 'width:100%;' %>
    </div>
  <% end %>
  <div style="margin-top: 18px; text-align: center;">
    <%= link_to 'Şifremi Unuttum', new_password_path(resource_name), class: 'card-link' %> |
    <%= link_to 'Kayıt Ol', new_registration_path(resource_name), class: 'card-link' %>
  </div>
</div>
